#!/bin/bash
################################
# Menú para comandos sencillos
################################
echo –e "\n --- MENU DE COMANDOS---\n"
#
echo " a. Lista del directorio de trabajo"
echo " b. Nombre del directorio de trabajo"
echo " c. Usuarios conectados"

echo
read -p "Introduzca una opción: " opcion
echo
case "$opcion" in

        a)     ls ;;
        b)     pwd ;;
        c)     whoami ;;
        *)     echo Opción incorrecta ;;
esac

